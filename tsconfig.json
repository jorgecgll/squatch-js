{
  "compilerOptions": {
    "outDir": "./",
    "sourceMap": false,
    "noImplicitAny": false,
    "allowSyntheticDefaultImports": true,
    "strictNullChecks": true,
    "module": "commonjs",
    "target": "es5",
    "lib": ["dom", "es5", "scripthost", "es2015"]
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "**/*.spec.ts"],
  "typedocOptions":{
    "out": "docs",
    "json": "docs/docs.json",
    "excludePrivate": true,
    "excludeProtected": true
  }
}
